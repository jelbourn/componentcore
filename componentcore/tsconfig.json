{
  "compilerOptions": {

    /* Basic Options */
    "incremental": true,
    "target": "ES2017",
    "module": "ES2015",
    "declaration": true,
    "outDir": "./dist",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": false,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
